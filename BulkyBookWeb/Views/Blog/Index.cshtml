@model IEnumerable<Blog>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-8">
            <h2>Blogs List</h2>
        </div>
        <div class="col-4 text-end">
            <a asp-controller="Blog" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Blog</a>
        </div>
    </div>

    <table class="table table-bordered table-striped table-dark">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Category</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var blog in Model)
            {
                <tr>
                    <td>@blog.Title</td>
                    <td>@blog.Description</td>
                    <td>@blog.Category</td>
                    <td>
                        <div class="w-75 btn-group d-flex justify-content-evenly" role="group">
                            <div>
                                <a asp-controller="Blog" asp-action="Edit" asp-route-id="@blog.Id" class="btn btn-light"><i class="bi bi-pencil-square"></i> Edit</a>
                            </div>
                            <div>
                                <a asp-controller="Blog" asp-action="Delete" asp-route-id="@blog.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i> Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>